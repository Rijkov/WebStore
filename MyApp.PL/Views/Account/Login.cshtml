@using MyApp.PL.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Main css: -->
    <link href="~/Content/Admin.css" rel="stylesheet">

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="~/Images/logo_2.png" id="icon" alt="User Icon" />
            </div>
            <h5 style="color:red;font-family:'Times New Roman'">@ViewBag.errorMsg</h5>
            <!-- Login Form -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    @Html.TextBoxFor(model => model.Email, new { @class = "fadeIn second", @placeholder = "Email" })
                    @Html.TextBoxFor(model => model.Password, new { @class = "fadeIn third", placeholder = "Password" })
                </fieldset>
                <input type="submit" class="fadeIn fourth" value="Log In">
            }

            <!-- Remind Passowrd -->
        <div id="formFooter">
            Don't have an account?  @Html.ActionLink("Sign Up", "Register", "Account", "", new { @class = "underlineHover" })
            <br /><br />

                  <a id="bk_btn" href="/Store/StorePage">
                      <i class="fa fa-fast-backward" aria-hidden="true"></i>   Go Back
                  </a>
        </div>
        </div>
    </div>
    <style>
        #bk_btn{
            color: darkorange;
            text-decoration: none;
        }
        #bk_btn:hover {
            color: gold;
            
        }
    </style>
</body>
</html>