@model MyApp.BLL.DTO.UserDTO

@{
    ViewBag.Title = "FeedBack";
    Layout = null;
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container contact">
    <h3 style="color:red;text-align:center;font-family:'Times New Roman'">@ViewBag.Empty @ViewBag.exception</h3>
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-3">
                <div class="contact-info">
                    <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image" />
                    <h2>Contact Us</h2>
                    <h4>We would love to hear from you !</h4>
                </div>
            </div>
            <div class="col-md-9">
                <div class="contact-form">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="fname">First Name:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.fname, new { @placeholder = "Enter First Name", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="lname">Phone:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.phnomber, new { @placeholder = "Enter Your phone number", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Email:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.email, new { @placeholder = "Enter Your Email", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.email, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="comment">Comment:</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(model => model.login, new { @placeholder = "Write Comment", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
    <div style="width:250px;margin:auto">
        @Html.ActionLink("<--- Go back main page", "Storepage", "Store", "", new { id = "back" })
    </div>

</div>

<style>
    .error {
        color: red;
        font-family: 'Palatino Linotype';
    }

    #back {
        border: 2px solid white;
        color: blue;
        border-radius: 25px;
        background-color: antiquewhite;
        padding: 9px;
        text-decoration: none;
        font-size: larger;
        font-weight: bold;
    }

        #back:hover {
            background-color: darkblue;
            color: antiquewhite;
        }

    body {
        background-color: #25274d;
    }

    .contact {
        padding: 4%;
        height: 400px;
    }

    .col-md-3 {
        background: #ff9b00;
        padding: 4%;
        border-top-left-radius: 0.5rem;
        border-bottom-left-radius: 0.5rem;
    }

    .contact-info {
        margin-top: 10%;
    }

        .contact-info img {
            margin-bottom: 15%;
        }

        .contact-info h2 {
            margin-bottom: 10%;
        }

    .col-md-9 {
        background: #fff;
        padding: 3%;
        border-top-right-radius: 0.5rem;
        border-bottom-right-radius: 0.5rem;
    }

    .contact-form label {
        font-weight: 600;
    }

    .contact-form button {
        background: #25274d;
        color: #fff;
        font-weight: 600;
        width: 25%;
    }

        .contact-form button:focus {
            box-shadow: none;
        }
</style>